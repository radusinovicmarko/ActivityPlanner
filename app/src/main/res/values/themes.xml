<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ActivityPlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="notifications_icon">@drawable/ic_notifications_icon</item>
        <item name="translate_icon">@drawable/ic_translate_icon</item>
        <item name="calendar_icon">@drawable/ic_calendar</item>
        <item name="time_icon">@drawable/ic_time</item>
        <item name="location_icon">@drawable/ic_location</item>
        <item name="circle_icon">@drawable/ic_circle</item>
        <item name="left_arrow_icon">@drawable/ic_left_arrow</item>
        <item name="right_arrow_icon">@drawable/ic_right_arrow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ActivityPlanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.ActivityPlanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ActivityPlanner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>